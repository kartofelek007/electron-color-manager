{
  "name": "Colors",
  "version": "1.0.0",
  "description": "Micro Color manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "rimraf dist & electron-builder"
  },
  "keywords": [
    "Electron",
    "Color",
    "Manager"
  ],
  "author": "Marcin Domański",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^10.2.0",
    "electron-builder": "^22.8.0"
  },
  "build": {
    "appId": "Colors",
    "productName": "Colors",
    "copyright": "Marcin Domański",
    "files": [
      "**/*",
      "images/icon.png"
    ],
    "extraFiles": [
      {
        "filter": [
          "./collors.json"
        ]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "images/icon.ico"
    },
    "portable": {
      "artifactName": "colors.exe"
    }
  },
  "dependencies": {
    "@simonwep/selection-js": "^1.7.1"
  }
}
